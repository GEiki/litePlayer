<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_bottom_play_bar"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#0000"
    android:layout_gravity="bottom"
    tools:layout_editor_absoluteY="25dp">



        <RelativeLayout
            android:id="@+id/bottom_layout_expand"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@android:color/white"
            android:layout_marginTop="8dp">




            <ImageButton
                android:id="@+id/btn_next_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="88dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_action_next" />


            <TextView
                android:id="@+id/tv_title_expand"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:text="未知歌曲"
                android:ellipsize="marquee"
                android:focusable="true"
                android:singleLine="true"
                android:focusableInTouchMode="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="8dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_artist_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="32dp"
                android:text="未知歌手" />




        <ImageButton
            android:id="@+id/btn_pause_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/ic_action_pause"
            android:layout_alignParentRight="true" />

        <ImageButton
            android:id="@+id/btn_play_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_action_play"
            android:visibility="visible"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/iv_circle"
            android:text="这"
            android:gravity="center"
            android:textSize="25sp"
            android:elevation="8dip"
            android:layout_width="53dp"
            android:layout_height="57dp"
            android:background="@drawable/circle_background"
            android:layout_marginLeft="10dp" />

</RelativeLayout>

