<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_peekHeight = "80dp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    >


<RelativeLayout
    android:id="@+id/ll_bottom_play_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >
        <RelativeLayout
            android:id="@+id/rl_title_collapse"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@android:color/white">
            <TextView
                android:id="@+id/tv_title_expand"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:text="未知歌曲"
                android:textColor="@android:color/primary_text_light"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:singleLine="true"
                android:focusableInTouchMode="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="8dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_artist_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@android:color/darker_gray"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="32dp"
                android:text="未知歌手" />



        <LinearLayout
            android:id="@+id/ll_control_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="88dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_pause_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginEnd="15dp"
                android:background="@drawable/ic_action_pause"
                 />

            <ImageButton
                android:id="@+id/btn_play_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_action_play"
                android:visibility="visible"
                android:layout_marginEnd="15dp" />
            <ImageButton
                android:id="@+id/btn_next_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:background="@drawable/ic_action_next" />
        </LinearLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/iv_circle"
            android:text="这"
            android:gravity="center"
            android:textSize="25sp"
            android:elevation="8dip"
            android:layout_width="53dp"
            android:layout_height="57dp"
            android:background="@drawable/circle_background"
            android:layout_marginLeft="10dp" />
        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_action_left"/>


    <include layout="@layout/dialog_play"
        android:id="@+id/bottom_play"/>

</RelativeLayout>

</FrameLayout>